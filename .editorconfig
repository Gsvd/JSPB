root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
charset = utf-8
tab_width = 4

[*.{dtd, html, inc, php, phpt, rng, wsdl, xml, xsd, xsl}]
indent_size = 4
indent_style = space

[*.md]
indent_style = space
max_line_length = 80

[COMMIT_EDITMSG]
indent_size = 4
indent_style = space
max_line_length = 80

[*.patch]
trim_trailing_whitespace = false
